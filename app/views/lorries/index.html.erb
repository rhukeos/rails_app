<h1>Lorries</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lorries.each do |lorry| %>
      <tr>
        <td><%= link_to 'Show', lorry %></td>
        <td><%= link_to 'Edit', edit_lorry_path(lorry) %></td>
        <td><%= link_to 'Destroy', lorry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

